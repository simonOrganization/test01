<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zfxf.admin.douniu.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dip" >

        <LinearLayout
            android:id="@+id/ll_guide_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
        <View android:layout_height="10dip"
              android:layout_width="10dip"
              android:id="@+id/v_guide_redpoint"
              android:background="@drawable/blackpoint"/>
    </RelativeLayout>

    <Button
        android:layout_height="35dip"
        android:layout_width="130dip"
        android:id="@+id/bt_guide_start"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dip"
        android:textColor="@color/btn_colors"
        android:text="立即体验"
        android:textSize="18sp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:background="@drawable/buttonbackgroud"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/ll_guide_bar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="#e83e00"
        android:layout_alignParentTop="true"
        android:visibility="gone">
    </LinearLayout>
</RelativeLayout>
